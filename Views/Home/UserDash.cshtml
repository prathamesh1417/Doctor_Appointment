
@{
    ViewData["Title"] = "UserDash";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    .hero {
        background-color: #ffcc00;
        color: #333;
        padding: 6rem 2rem;
        text-align: center;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.2rem;
            margin-top: 1rem;
        }

    .dashboard-content {
        margin-top: 2rem;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-header {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
        border-radius: 15px 15px 0 0;
    }

    .card-body {
        background-color: #fff;
        padding: 2rem;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Hero Section -->
<div class="hero text-white">
    <div class="container">
        <h1>Welcome to Your Dashboard,@ViewData["o"]</h1>
        <p>Manage your account, view stats, and more.</p>
    </div>
</div>

<!-- Dashboard Content -->
<div class="dashboard-content container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Profile</div>
                <div class="card-body">
                    <p>View and edit your profile information.</p>
                    <a href="#" class="btn btn-primary">Go to Profile</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Statistics</div>
                <div class="card-body">
                    <p>Check your account statistics and performance.</p>
                    <a href="#" class="btn btn-primary">View Stats</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Settings</div>
                <div class="card-body">
                    <p>Manage your account settings and preferences.</p>
                    <a href="#" class="btn btn-primary">Edit Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>


