@model WebApplication7.Models.Booki

@{
    Layout = null; // Or, use a _Layout.cshtml for consistent styling
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Appointment Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern, readable font */
            background-color: #f8f9fa; /* Light gray background */
            padding-top: 20px;
        }

        .container {
            background-color: #fff; /* White background for the content */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 20px;
            margin-top: 20px;
        }

        h4 {
            color: #007bff; /* Bootstrap primary color for heading */
            margin-bottom: 20px; /* Spacing below heading */
        }

        .row {
            margin-bottom: 10px; /* Spacing between rows */
        }

        dt {
            font-weight: bold; /* Make labels bold */
            color: #495057; /* Darker gray for labels */
        }

        dd {
            color: #343a40; /* Slightly darker gray for values */
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .back-link {
            margin-top: 1rem;
            display: inline-block;
        }

        .doctor-name { /* Style for the doctor's name */
            font-style: italic;
            color: #28a745; /* Green color */
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h4 class="text-center">Appointment Details</h4>  @* Added text-center class *@
        <hr />

        <dl class="row">
            <dt class="col-sm-3 col-md-2">
                @* Adjusted column widths for responsiveness *@
                <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.pname)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.pname)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.padd)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.padd)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.pmob)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.pmob)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-id-card"></i>  @Html.DisplayNameFor(model => model.paadhar)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.paadhar)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.pmsg)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.pmsg)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-calendar-alt"></i>  @Html.DisplayNameFor(model => model.pdate)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.pdate)
            </dd>

            <dt class="col-sm-3 col-md-2">
                <i class="fas fa-user-md"></i> Doctor:
            </dt>
            <dd class="col-sm-9 col-md-10">
                <span class="doctor-name">@Model.doc?.dname</span> @* Display doctor's name using the navigation property *@
            </dd>

        </dl>


        <div>
            @* Use Bootstrap buttons *@
            <a asp-action="Edit" asp-route-id="@Model?.aid" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Index" class="btn btn-secondary back-link"><i class="fas fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>