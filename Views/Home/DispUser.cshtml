@model List<WebApplication7.Models.Booki>
@{
    ViewData["Title"] = "DispUser";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Patient Bookings</h1>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Patient ID</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Mobile No</th>
                    <th scope="col">Address</th>
                    <th scope="col">Aadhar</th>
                    <th scope="col">Message</th>
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Appointment Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.aid</td>
                        <td>@i.pname</td>
                        <td>@i.pmob</td>
                        <td>@i.padd</td>
                        <td>@i.paadhar</td>
                        <td>@i.pmsg</td>
                       <td>Dr. @i.DoctorName</td>
                        <td>@i.pdate</td>
                        <td>
                            <a href="/Home/Edit?id=@i.aid" class="btn btn-primary">Edit</a> |
                            <a href="/Home/Details?id=@i.aid" class="btn btn-info">Details</a> |
                            <a href="/Home/Delete?id=@i.aid" class="btn btn-danger">Delete</a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Optional Custom CSS -->
<style>
    table {
        border-radius: 8px;
        overflow: hidden;
    }

    th {
        background-color: #343a40;
        color: white;
    }

    tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s ease;
    }

    td, th {
        padding: 12px;
    }
</style>