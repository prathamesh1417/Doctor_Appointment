@model WebApplication7.Models.doct

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Sign-In & Sign-Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .container {
            width: 900px;
            height: 550px;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            display: flex;
            position: relative;
            transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
        }

        .form-container {
            position: absolute;
            width: 50%;
            height: 100%;
            top: 0;
            transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .sign-in-container {
            left: 0;
        }

        .sign-up-container {
            left: 50%;
        }

        .container.right-panel-active .sign-up-container {
            transform: translateX(0%);
        }

        .overlay-container {
            position: absolute;
            width: 50%;
            height: 100%;
            top: 0;
            right: 0;
            overflow: hidden;
            transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
            z-index: 100;
        }

        .container.right-panel-active .overlay-container {
            transform: translateX(-100%);
        }

        .overlay {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            position: absolute;
            left: -100%;
            width: 200%;
            height: 100%;
            transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
        }

        .container.right-panel-active .overlay {
            transform: translateX(50%);
        }

        .overlay-panel {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 50%;
            transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
        }

        .overlay-left {
            transform: translateX(-20%);
        }

        .container.right-panel-active .overlay-left {
            transform: translateX(0);
        }

        .overlay-right {
            right: 0;
            transform: translateX(0);
        }

        .container.right-panel-active .overlay-right {
            transform: translateX(20%);
        }

        .btn {
            background: #6a11cb;
            border: none;
            padding: 12px 24px;
            color: #fff;
            font-size: 16px;
            border-radius: 9px;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .btn:hover {
                background: #5a0da9;
                transform: scale(1.05);
            }

            .btn:active {
                background: #5a0da9;
                transform: scale(0.95);
            }

        .form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 0 30px;
            height: 100%;
        }

            .form input {
                background: #f0f0f0;
                border: none;
                padding: 12px;
                margin: 10px 0;
                width: 100%;
                border-radius: 7px;
                font-size: 14px;
                transition: box-shadow 0.3s, transform 0.3s;
                outline: none;
            }

                .form input:focus {
                    box-shadow: 0 0 10px rgba(106, 17, 203, 0.5);
                    transform: scale(1.01);
                }

            .form h2 {
                margin-bottom: 10px;
                color: #333;
                font-weight: 700;
            }

            .form label {
                color: blue;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form input[type="file"] {
                margin-top: 5px;
            }

        .overlay-panel h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #fff;
            font-weight: 700;
        }

        .overlay-panel p {
            font-size: 16px;
            margin-bottom: 30px;
            color: #e0e0e0;
        }

    
    </style>
</head>

<body>
    <div class="container" id="container">
        <!-- Sign-In Form -->
        <div class="form-container sign-in-container">
            <form action="/Home/Doctorlog" method="post" class="form">
                <h2>Sign In</h2>
                <input type="text" name="dname" placeholder="Email" />
                <input type="password" name="dpass" placeholder="Password" />
                <button type="submit" class="btn">Sign In</button>
            </form>
        </div>

        <!-- Sign-Up Form -->
        <div class="form-container sign-up-container">
            <form action="/Home/DoctorReg" id="doctorRegForm" method="post" enctype="multipart/form-data" class="form">
                <h2>Sign Up</h2>
                <input type="text" id="dname" name="dname" placeholder="Username" />
                <input type="email" id="demail" name="demail" placeholder="Email" />
                <input type="text" id="CertificateID" name="CertificateID" placeholder="Certificate ID" />
                <div class="form-group">
                    <label class="control-label">Upload A Valid Certificate</label>
                    <input id="Cert" name="Cert" type="file" class="form-control" />
                </div>
                <input type="password" id="dpass" name="dpass" placeholder="Password" />
                <input type="password" id="dcpass" name="dcpass" placeholder="Confirm Password" />
                <button type="button" class="btn" id="submitForm">Sign Up</button>
            </form>
        </div>
        <script>
            document.getElementById('submitForm').addEventListener('click', function () {
                const username = document.getElementById('dname').value.trim();
                const email = document.getElementById('demail').value.trim();
                const certificate = document.getElementById('Cert').files[0];
                const password = document.getElementById('dpass').value.trim();
                const confirmPassword = document.getElementById('dcpass').value.trim();

                if (!username || !email || !certificate || !password || !confirmPassword) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Missing Fields',
                        text: 'All fields are required!',
                    });
                    return;
                }

                if (password !== confirmPassword) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Password Mismatch',
                        text: 'Passwords do not match!',
                    });
                    return;
                }

                Swal.fire({
                    icon: 'success',
                    title: 'Form Submitted Successfully!',
                    text: 'Doctor`s info is valid, Welcome to TrueMeds!',
                }).then(() => {
                    document.getElementById('doctorRegForm').submit(); // Submit the form
                });
            });
        </script>
        <!-- Overlay Section -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h2>Welcome Back!</h2>
                    <p>To keep connected with us, please log in with your personal info.</p>
                    <button class="btn" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h2>Hello! Doctor</h2>
                    <p>Don't Have a Account ?? Please Register Here with Verified Details.</p>
                    <button class="btn" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');

        signUpButton.addEventListener('click', () => {
            container.classList.add('right-panel-active');
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove('right-panel-active');
        });
    </script>
</body>

</html>
